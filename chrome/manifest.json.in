{
  "name": "pixplus",
  "version": "@VERSION@",
  "manifest_version": 2,

  "description": "@DESCRIPTION@",
  "icons": {
    @ICONS@
  },

  "background": {
    "page": "index.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://www.pixiv.net/*"],
      "exclude_globs": ["*pixivreader*"],
      "js": ["pixplus.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["http://www.pixiv.net/*"],
  "update_url": "http://crckyl.ath.cx:8088/pixplus/update.php?browser=chrome&version=@VERSION@"
}
