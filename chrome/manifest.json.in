{
  "name": "pixplus",
  "version": "@VERSION@",
  "manifest_version": 2,
  "description": "@DESCRIPTION@",
  "update_url": "http://ccl4.info/cgit/pixplus.git/plain/autoupdate/1/chrome.xml",
  "icons": {
    @ICONS@
  },
  "background": {
    "page": "index.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://www.pixiv.net/*"],
      "exclude_globs": ["*pixivreader*"],
      "js": ["pixplus.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
