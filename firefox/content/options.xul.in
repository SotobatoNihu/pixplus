<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://pixplus/locale/entities.dtd">
<prefwindow xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
            id="pixplus.options"
            title="pixplus"
            bottons="accept,cancel"
            ondialogaccept="return accept();">
  <!-- __PREFERENCES__ -->
  <prefpane id="tags" label="&pixplus.options.tags;">
    <preferences>
      <preference id="extensions.pixplus.conf_bookmark_tag_order" name="extensions.pixplus.conf_bookmark_tag_order" type="string"/>
      <preference id="extensions.pixplus.conf_bookmark_tag_aliases" name="extensions.pixplus.conf_bookmark_tag_aliases" type="string"/>
    </preferences>
    <box orient="vertical" flex="1">
      <description style="white-space:pre;">&__MSG_5b23e5a021fff50d9240aacd354348d8e60ff3ac__;</description>
      <textbox multiline="true" preference="extensions.pixplus.conf_bookmark_tag_order" flex="1"/>
      <description style="white-space:pre;">&__MSG_39e3ea78d60b82bbc6a138cf465a4416c725a94c__;</description>
      <box orient="horizontal" flex="1">
        <listbox id="conf_bookmark_tag_aliases" ondblclick="tag_aliases_edit();" flex="1">
          <listcols>
            <listcol/>
            <listcol/>
            <listcol flex="1"/>
          </listcols>
        </listbox>
        <box orient="vertical">
          <button label="&pixplus.options.tags.aliases.add;" icon="add" oncommand="tag_aliases_add();"/>
          <button label="&pixplus.options.tags.aliases.remove;" icon="remove" oncommand="tag_aliases_remove();"/>
          <button label="&pixplus.options.tags.aliases.edit;" icon="properties" oncommand="tag_aliases_edit();"/>
        </box>
      </box>
    </box>
  </prefpane>
  <prefpane id="export" label="&pixplus.options.export;">
    <box orient="vertical" flex="1">
      <textbox id="export_text"/>
      <box orient="horizontal">
        <button label="&pixplus.options.export.export;" oncommand="export_export();"/>
        <button label="&pixplus.options.export.import;" oncommand="export_import();"/>
      </box>
    </box>
  </prefpane>
  <script src="config.js"/>
  <script src="debug.js"/>
  <script src="pref.js"/>
  <script src="options.js"/>
</prefwindow>
